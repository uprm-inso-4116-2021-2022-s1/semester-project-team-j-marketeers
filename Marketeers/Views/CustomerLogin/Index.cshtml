@model Marketeers.Models.CustomerModel

    <div class="row">
        <div class="col-md-1">
            <h4 class="vertical-center">Login</h4>
        </div>
    </div>


        <hr class="hr-login" style="margin-top: 2%" />
        <div class="row">
            <div class="col-md-4">
                <h1>Welcome back 'pal</h1>
                <h6>Or should I say...Marketeer!</h6>
            </div>
            <div class="col-md-2">
                <img align="left" src="/Img/happy-buggy.svg" alt="HTML5 Icon" style="width:132px;height:132px;">
            </div>
            <div class="col-md-6">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn-color" />
                    </div>
                    <div>
                        <p>Don't have an account? <a asp-controller="CustomerRegister" asp-action="Index">Click to Register</a></p>  
                    </div>
                </form>
            </div>
        </div>



        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
